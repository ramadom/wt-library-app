{% extends 'base.html.twig' %}

{% block body %}

    <div id="book-list">
        <table id="bookTable">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Author</th>
                    <th>Publicated</th>
                    <th>ISBN</th>
                    <th>copies</th>
                </tr>
            </thead>
            <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.genre }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.publicationDate|date('Y-m-d') }}</td>
                <td>{{ book.ISBN }}</td>
                <td>{{ book.copies }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No books in library</td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
